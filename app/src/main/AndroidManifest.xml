            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.Ecommerce" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Ecommerce" />
