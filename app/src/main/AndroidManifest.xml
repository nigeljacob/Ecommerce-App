<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecommerce"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activities.ThankyouActivity"
            android:exported="false"
            android:label="@string/title_activity_thankyou"
            android:theme="@style/Theme.Ecommerce" />
        <activity
            android:name=".SeeAllActivity"
            android:exported="false"
            android:label="@string/title_activity_see_all"
            android:theme="@style/Theme.Ecommerce" />
        <activity
            android:name=".activities.NotificationActivity"
            android:exported="false"
            android:label="@string/title_activity_notification"
            android:theme="@style/Theme.Ecommerce" />
        <activity
            android:name=".activities.CheckoutActivity"
            android:exported="false"
            android:label="@string/title_activity_checkout"
            android:theme="@style/Theme.Ecommerce" />
        <activity
            android:name=".models.Review"
            android:exported="false"
            android:label="@string/title_activity_review"
            android:theme="@style/Theme.Ecommerce" />
        <activity
            android:name=".activities.OrderViewActivity"
            android:exported="false"
            android:label="@string/title_activity_order_view"
            android:theme="@style/Theme.Ecommerce" />
